<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimaryDark"
        android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_place_holder_circle"
                android:id="@+id/ivProfileAvatar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Олена Мельник"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:textColor="@color/fontColor"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/ivProfileAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivProfileAvatar"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="10 пласт коїнів"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="@color/coinColors"
                android:textStyle="bold"

                app:layout_constraintStart_toEndOf="@+id/ivProfileAvatar"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="Ти можеш обміняти пласткойни у пластовій крамниці"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/ivProfileAvatar"
                android:layout_marginStart="8dp"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ill_mount"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@+id/ivProfileAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/imageView"/>

        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check2" android:layout_marginStart="2dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check2"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check3" app:layout_constraintStart_toEndOf="@+id/check1"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check3"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check4" app:layout_constraintStart_toEndOf="@+id/check2"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check4"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check5" app:layout_constraintStart_toEndOf="@+id/check3"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check5"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check6" app:layout_constraintStart_toEndOf="@+id/check4"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check6"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check7" app:layout_constraintStart_toEndOf="@+id/check5"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check7"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check8" app:layout_constraintStart_toEndOf="@+id/check6"
                app:layout_constraintHorizontal_bias="0.5"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check8"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check9" app:layout_constraintStart_toEndOf="@+id/check7"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check9"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check10" app:layout_constraintStart_toEndOf="@+id/check8"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check10"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check11" app:layout_constraintStart_toEndOf="@+id/check9"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check11"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/check12" app:layout_constraintStart_toEndOf="@+id/check10"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"/>
        <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check12"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="✓"
                android:background="@drawable/shape_circle_accent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/check11"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="2dp"
                app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
                android:id="@+id/tvExit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/shape_rounded_ripple_white"
                android:text="Вийти"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/dividerColor"
                android:id="@+id/divider2"
                android:layout_marginBottom="@dimen/margin_normal"
                app:layout_constraintBottom_toTopOf="@+id/tvFAQ"/>
        <TextView
                android:id="@+id/tvFAQ"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/shape_rounded_ripple_white"
                android:text="FAQ"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/divider1"
                android:layout_marginBottom="8dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/dividerColor"
                android:layout_marginBottom="@dimen/margin_normal"
                android:id="@+id/divider1"
                app:layout_constraintBottom_toTopOf="@id/tvExit"/>
        <TextView
                android:id="@+id/feedback"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:background="@drawable/shape_rounded_ripple_white"
                android:text="Зворотній звязок"
                app:layout_constraintBottom_toTopOf="@+id/divider2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
